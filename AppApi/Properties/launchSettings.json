{
  "profiles": {
    "http": {
      "commandName": "Project",
      "launchBrowser": true,
      "launchUrl": "swagger",
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "dotnetRunMessages": true,
      "applicationUrl": "http://localhost:5005"
    },
    "https": {
      "commandName": "Project",
      "launchBrowser": true,
      "launchUrl": "swagger",
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "dotnetRunMessages": true,
      "applicationUrl": "https://localhost:5443;http://localhost:5005"
    },
    "Container (Dockerfile)": {
      "commandName": "Docker",
      // allows us to fine tune docker deployment
      "DockerfileRunArguments": "-p 5443:8081 -p 5005:8080 -l mylabel=gateway",
      "launchBrowser": true,
      "launchUrl": "{Scheme}://{ServiceHost}:{ServicePort}/swagger",
      "environmentVariables": {
        // environment variables inside docker
        // "ASPNETCORE_HTTPS_PORTS": "8081",
        // "ASPNETCORE_HTTP_PORTS": "8080",
        // "DOCKER_ENV": "true"
      },
      // if you dont specify the port mappings, then this line will 
      // ... automatically assign random ports to the ports inside the docker container
      // ... so they become available outside of the container
      "publishAllPorts": true,
      "useSSL": true
    }
  }
}