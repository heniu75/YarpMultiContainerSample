{
  "profiles": {
    "MyYarpMock": {
      "commandName": "Project"
    },
    "Container (Dockerfile)": {
      "commandName": "Docker",
      "launchBrowser": true,
      "launchUrl": "http://{ServiceHost}:5005/yarp",
      // allows us to fine tune docker deployment
      "DockerfileRunArguments": "-p 5005:8080 -l mylabel=yarp",
      "environmentVariables": {
        // "ASPNETCORE_URLS": "https://+:443;http://+:80",
        // "ASPNETCORE_HTTPS_PORT": "44360",
        // "ASPNETCORE_HTTPS_PORTS": "5443", // assume your yarp app will already site behind an ssl cert
        // (e.g. behind digital ocean or behind ssl enabled nginx)
        "ASPNETCORE_URLS": "http://+:8080",
        "DOCKER_ENV": "true"
      },
      "publishAllPorts": true
      //"useSSL": false,
      // the following is the host port (development machine)
      // for some reason we need to set this for the yarp project
      //"httpPort": 51803
      //"sslPort": 44360
      //"useSSL": true
    },
    "https": {
      "commandName": "Project",
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        // SSL on the local development machine is supported
        "ASPNETCORE_HTTPS_PORTS": "5443",
        "ASPNETCORE_HTTP_PORTS": "5005"
      },
      "dotnetRunMessages": true,
      // SSL on the local development machine is supported
      // "applicationUrl": "https://localhost:5443;http://localhost:5005"
    }
  }
}