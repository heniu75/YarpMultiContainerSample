{
  "Urls1": "https://localhost:5443;http://localhost:5005",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      // Uncomment to hide diagnostic messages from runtime and proxy
      "Microsoft": "Warning",
      "Yarp": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "gatewayRoutes": {
        "Match": { "Path": "/gateway/{**remainder}" },
        "ClusterId": "gatewayCluster",
        "Transforms": [
          { "PathPattern": "/{**remainder}" },
          {
            "RequestHeader": "foo1",
            "Append": "bar1"
          }
        ]
      },
      "apiRoutes": {
        "Match": { "Path": "/api/{**remainder}" },
        "ClusterId": "apiCluster",
        "Transforms": [
          { "PathPattern": "/{**remainder}" },
          {
            "RequestHeader": "daniel",
            "Append": "wanna-fight"
          }
        ]
      }
    },
    "Clusters": {
      "gatewayCluster": {
        "Destinations": {
          "gatewayInstance1": { "Address": "https://localhost:6443/" }
        }
      },
      "apiCluster": {
        "Destinations": {
          "apiInstance1": { "Address": "https://localhost:7443/" }
        }
      }
    }
  },
  "DockerReverseProxy": {
    "Routes": {
      "gatewayRoutes": {
        "Match": { "Path": "/gateway/{**remainder}" },
        "ClusterId": "gatewayCluster",
        "Transforms": [
          { "PathPattern": "/{**remainder}" },
          {
            "RequestHeader": "foo1",
            "Append": "bar1"
          }
        ]
      },
      "apiRoutes": {
        "Match": { "Path": "/api/{**remainder}" },
        "ClusterId": "apiCluster",
        "Transforms": [
          { "PathPattern": "/{**remainder}" },
          {
            "RequestHeader": "daniel",
            "Append": "wanna-fight"
          }
        ]
      }
    },
    "Clusters": {
      "gatewayCluster": {
        "Destinations": {
          "gatewayInstance1": { "Address": "http://mygatewayapi:8080/" }
        }
      },
      "apiCluster": {
        "Destinations": {
          "apiInstance1": { "Address": "http://appapi:8080/" }
        }
      }
    }
  }
}